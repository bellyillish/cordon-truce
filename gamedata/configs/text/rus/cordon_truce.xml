  </string>

  <string id="msg_cordon_check_truce_active">
    <text>The Cordon truce between Loners and Army is currently in place.</text>
  </string>

  <string id="msg_cordon_check_truce_suspended">
    <text>The Cordon truce between Loners and Army is suspended for another %s %s.</text>
  </string>

